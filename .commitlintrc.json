{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "subject-case": [
      2,
      "always",
      "lowerCase"
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ]
  }
}